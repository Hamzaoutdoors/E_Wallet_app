<div class="bg-image splash-bg shadow-1-strong rounded d-flex justify-content-center align-items-end">
  <div class="sign_in_container text-center">
    <% if user_signed_in? %>
      <h3 class="welcome-title">Welcome, <%= current_user.name.capitalize%></h3>
      <p class="welcome-body">You are signed in</p>
      <%= link_to 'Go To Categories', categories_path, class: "login-btn btn mb-4" %>
      <%= link_to 'LOG OUT', destroy_user_session_path, method: :delete, class: "btn btn-light mb-2" %>
    <%else%>
      <%= link_to 'LOG IN', new_user_session_path, class: "login-btn btn mb-4" %>
      <%= link_to 'SIGN UP', new_user_registration_path, class: "btn btn-light mb-2" %>
    <%end%>
  </div>
</div>