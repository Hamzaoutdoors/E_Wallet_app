<div class="card w-100 mt-1">
  <div class="g-0 d-flex align-items-center p-2">
    <div class="w-25">
      <%= image_tag(category.icon, alt: "category icon", class: "category-icon") %>
    </div>
    <div class="w-50 mx-3">
      <div class="card-body">
        <h5 class="display-6 fw-bold text-center"><%= category.name %></h5>
      </div>
    </div>
    <div class="w-25 ml-4 pl-4">
      <h4 class="fw-bold">$ <%= total_amount(category.activity_categories) %></h4>
    </div>
  </div>
</div>